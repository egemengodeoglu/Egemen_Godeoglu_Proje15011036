<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/arkaplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/覺mageView_foto"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textView_baslik"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/覺mageView_foto"
                android:text="Baslik"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView_not"
                android:layout_width="249dp"
                android:layout_height="72dp"
                android:layout_below="@id/textView_baslik"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/覺mageView_foto"
                android:text="Not"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_dosya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_not"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/覺mageView_foto"
                android:text="Dosya"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_oncelik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_not"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textView_dosya"
                android:text="Oncelik: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_tarih_saat"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_not"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="245dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Tarih Saat"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_sil"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_baslik"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/textView_not"
                android:text="" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>